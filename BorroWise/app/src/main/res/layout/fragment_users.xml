<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shayanetan.borrowise.Fragments.UsersFragment">

    <com.example.shayanetan.borrowise.Views.SlidingTabLayout
        android:id="@+id/Usliding_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primaryColor" />

    <android.support.v4.view.ViewPager
        android:id="@+id/Uview_pager"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_below="@id/Usliding_tab"/>


</RelativeLayout>
