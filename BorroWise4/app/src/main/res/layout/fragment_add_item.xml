<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shayanetan.borrowise2.Fragments.AddItemFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center_horizontal"
        android:background="@color/primaryDarkColor"
        android:id="@+id/card_camera">

        <ImageView
            android:id="@+id/img_camera"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_camera"
            android:adjustViewBounds="true"
            android:scaleType="fitXY" />
    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btn_ItemToMoney"
        android:src="@drawable/ic_account"
        app:fabSize="normal"
        app:backgroundTint="@color/violetColor"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight = "true"/>

    <LinearLayout
        android:id="@+id/layout_item_name"
        android:layout_below="@id/card_camera"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/navigation_icon_size"
            android:layout_height="@dimen/navigation_icon_size"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_item_dark"/>

        <EditText
            android:id="@+id/et_AIItemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Item name"
            android:textSize="20sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_user_name"
        android:layout_below="@id/layout_item_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:weightSum="11"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/navigation_icon_size"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_account_dark"/>

        <AutoCompleteTextView
            android:id="@+id/atv_AIPersonName"
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:hint="Person name"
            android:ems="10">
            <requestFocus />
        </AutoCompleteTextView>

        <ImageView
            android:layout_width="0dp"
            android:id="@+id/btn_addContact"
            android:layout_weight="2"
            android:layout_height="@dimen/navigation_icon_size"
            android:layout_marginRight="3dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_add_plus"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_date_details"
        android:layout_below="@id/layout_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Start Date"
                android:textSize="20sp"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:background="@drawable/accent_dark_border"
                android:id="@+id/btn_AIStartDate"
                android:layout_weight="2" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20sp"
                android:text="End Date"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/accent_dark_border"
                android:id="@+id/btn_AIEndDate" />

        </LinearLayout>

    </LinearLayout>


