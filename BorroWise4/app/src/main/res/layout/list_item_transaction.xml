<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/card_transaction"
    android:id="@+id/item_container">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/layout_username_it"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:background="@color/accentDarkColor">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="20dp"
                android:src="@drawable/ic_account"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/tv_account_item"
                android:layout_width="0dp"
                android:layout_weight="14"
                android:layout_marginLeft="3dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Shayane Tan"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="@dimen/card_username_textsize"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_item_image"
            android:layout_below="@id/layout_username_it"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">
            <ImageView
                android:background="@color/dividerColor"
                android:id="@+id/img_item"
                android:layout_height="match_parent"
                android:layout_width="match_parent"/>
        </LinearLayout>

        <TextView
            android:layout_below="@id/layout_item_image"
            android:id="@+id/tv_itemname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="17sp"
            android:text="HawkeBag"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_below="@id/tv_itemname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_duedateitem_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginRight="5dp"
                android:text="@string/lbl_duedate"
                android:layout_below="@id/tv_itemname"/>

            <TextView
                android:id="@+id/tv_duedateitem_val"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="@string/lbl_duedate"
                android:textStyle="bold"
                android:gravity="right"
                android:layout_toRightOf="@id/tv_duedateitem_label"
                android:layout_below="@id/tv_itemname"/>
        </LinearLayout>

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_lost"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="@string/btn_lost"
                android:textColor="@android:color/white"
                android:background="@color/redColor"/>
            <Button
                android:id="@+id/btn_returned"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="@string/btn_returned"
                android:textColor="@android:color/white"
                android:background="@color/accentColor"/>
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>
